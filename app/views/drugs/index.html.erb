<div class="container">
  <div class="top-drug-title">
    <h1> Résultats proposés par Rupt'Care</h1>
    <p>L'alternative proposée par <strong id="rupt">Rupt'</strong>Care</p>
  </div>

<% if @drug.present? %>
  <div class="card-drug">
    <img src="https://images.unsplash.com/photo-1558956397-d89fe6bb84e7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=50" />
    <div class="card-drug-infos">
      <h2><%= link_to @main_drug.name, drug_path(@main_drug) %></h2>
      <p><%= @main_drug.drugs_class %></p>
      <p><%= @main_drug.family %></p>
    </div>
  </div>
<% end  %>

  <p><strong id="alternatives">Les autres alternatives thérapeutiques</strong> pouvant être recommandées au prescripteur:</p>

  <div class="cards-drugs-grid">
    <% @drugs.each do |drug| %>
      <% unless drug == @main_drug %>
        <div class="card-other-drug">
          <img src="https://images.unsplash.com/photo-1558956397-7f6aea7aaab4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=50" />
          <h2><%= link_to drug.name, drug_path(drug) %></h2>
          <p><%= drug.drugs_class %></p>
          <p><%= drug.family %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
