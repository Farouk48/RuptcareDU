<div  id='banner-home' style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(assets/background-med.jpg);">
  <div class="container">
    <h1>Rupt'Care</h1>
    <h2>Votre solution pour la rupture des médicaments</h2>
  </div>
</div>


<div id="homesearch">
  <div class="container">
    <h3>Je cherche une alternative médicamenteuse pour :</h3>
    <div id="searchbar">
      <%= form_tag drugs_path, method: :get do %>
        <%= text_field_tag :name,
          params[:name], class: "input-search-bar", id:"search", placeholder: "Entrer le nom ici" %>

        <%= text_field_tag :drugs_class,
          params[:drugs_class], class: "input-search-bar", id:"search", placeholder: "Entrer le nom ici"%>
      <%= submit_tag "Entrer", class: "btn btn-primary"%>
     <% end %>
    </div>
  </div>

</div>

