<div class ="map-search">
  <div id="title-pharma"><%= @available_pharmas.count %> pharmacies du réseau disposent de la <strong class="strong-name"><%= @drug.name %></strong> en Île de France
    <div class='return-index'>
      <%= link_to "", drugs_path(drug_id: @drug.id, name: params[:name]), class:"fas fa-arrow-circle-left fa-2x", id:"back-index"%>
    </div>
  </div>
</div>


<div id="map-pharma">
  <div id="pharmas">
    <% @pharmas.reject { |exclude| exclude == @user_pharma }.each do|pharma| %>
    <div id="pharma-display">
      <% if pharma.present? %>
      <h2><%= pharma.name %></h2>
      <p><%= pharma.address %></p>
      <p><%= pharma.city %> </p>
      <% else %>
      <h2>test</h2>
      <% end %>
   </div>
    <% end %>
  </div>

  <div id="map"
       style="width: 100%; height: 100vh;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <!--  <div id="main"
       data-markers="<%= @marker.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div> -->

</div>
